# Development Docker environment
NODE_ENV=development
PORT=3000

# JWT (dev-only values, change in production)
JWT_SECRET=dev-secret-change-me
JWT_EXPIRES=1h

# Redis (Docker Compose service name is 'redis')
REDIS_URL=redis://redis:6379

# MongoDB connection string
# Set this to your local or Atlas URI. If empty, the app will start and log a warning.
# MONGO_URI=mongodb://localhost:27017/your_db_name
# Example environment variables for Back-Mobile
PORT=3000
MONGO_URI=mongodb://127.0.0.1:27017/back-mobile
NODE_ENV=development
JWT_SECRET=replace_this_with_a_secure_secret
JWT_EXPIRES=1h
# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/back-mobile

# GraphQL Configuration
GRAPHQL_PATH=/graphql
GRAPHIQL_ENABLED=true

# JWT Configuration (if needed)
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h